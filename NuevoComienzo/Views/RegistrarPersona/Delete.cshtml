@model NuevoComienzo.Models.Persona

@{
    ViewData["Title"] = "Borrar Persona";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
    <div class="container" style="padding-top:7%;">
       
        @if (ViewBag.ErrorMessage != null)
        {
            <div class="alert-danger"> <p>Ha ocurrido un error! Intente de nuevo</p> <p>ERROR: @ViewBag.ErrorMessage</p> </div>
        }

        <h1>Borrar</h1>

        <h3>¿Seguro(a) que quiere borrar a esta persona?</h3>
        <div>
            <h4>Persona</h4>
            <hr />
            <dl class="row">
                <dt class="col-sm-2">
                    Primer Nombre
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.PrimerNombre)
                </dd>
                <dt class="col-sm-2">
                    Segundo Nombre
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.SegundoNombre)
                </dd>
                <dt class="col-sm-2">
                    Primer Apellido
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.PrimerApellido)
                </dd>
                <dt class="col-sm-2">
                    Segundo Apellido
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.SegundoApellido)
                </dd>
                <dt class="col-sm-2">
                    Identificaci&oacute;n
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.IdentificadorId)
                </dd>
                <dt class="col-sm-2">
                    Tipo Identificaci&oacute;n
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Identificador.TipoIdentificador.DescTipoIdentificador)
                </dd>
                <dt class="col-sm-2">
                    Rol
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.TipoPersona.DescTipoPersona)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Sexo)
                </dt>
                <dd class="col-sm-10">
                    @if (this.Model.Sexo == null)
                    {
                        <p>M</p>
                    }
                    else
                    {
                        <p>F</p>
                    }
                </dd>
                <dt class="col-sm-2">
                    Fecha de Nacimiento
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.FechaNacimiento)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Correo)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Correo)
                </dd>
                <dt class="col-sm-2">
                    Tel&eacute;fono
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Telefono)
                </dd>
                <dt class="col-sm-2">
                    Direcci&oacute;n
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Direccion.DescDireccion)
                </dd>
                <dt class="col-sm-2">
                    Distrito
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Direccion.Distrito.Nombre)
                </dd>
                <dt class="col-sm-2">
                    Cant&oacute;n
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Direccion.Distrito.Canton.Nombre)
                </dd>
                <dt class="col-sm-2">
                    Provincia
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Direccion.Distrito.Canton.Provincia.Nombre)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Anotacion.Alergias)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Anotacion.Alergias)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Anotacion.Medicamentos)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Anotacion.Medicamentos)
                </dd>
                <dt class="col-sm-2">
                    Diagn&oacute;stico de Aprendizaje
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Anotacion.DiagnosticoAprendizaje)
                </dd>
                <dt class="col-sm-2">
                    Diagn&oacute;stico Psicol&oacute;gico
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Anotacion.DiagnosticoPsicologico)
                </dd>
                <dt class="col-sm-2">
                    Observaciones del Supervisor
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Anotacion.ObservacionesSupervisor)
                </dd>
            </dl>

            <form asp-action="Delete">
                <input type="hidden" asp-for="PersonaId" />
                <input type="submit" value="Borrar" class="btn btn-danger" /> |
                <a asp-action="Index">Inicio</a>
            </form>
        </div>
    </div>
