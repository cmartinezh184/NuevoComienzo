
@page
@model RegisterModel
@{
    ViewData["Title"] = "Registro";
}

<div class="container" style="padding-top:8%;">



    <h5>@ViewData["Title"]</h5>

    <div class="row">
        <div class="col-md-4">
            <section>
                <form asp-route-returnUrl="@Model.ReturnUrl" method="post">
                    <h6>Crea una cuenta</h6>
                    <hr />
                    <div asp-validation-summary="All" class="text-danger"></div>
                    <div class="form-group">
                        <label asp-for="Input.Email">Correo Electrónico</label>
                        <input asp-for="Input.Email" class="form-control" />
                        <span asp-validation-for="Input.Email" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Input.Password">Contraseña</label>
                        <input asp-for="Input.Password" class="form-control" />
                        <span asp-validation-for="Input.Password" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Input.ConfirmPassword">Confirmar Contraseña</label>
                        <input asp-for="Input.ConfirmPassword" class="form-control" />
                        <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
                    </div>
                    <button type="submit" class="btn btn-primary">Registrar</button>
                </form>
            </section>
        </div>
        <div class="col-md-6 col-md-offset-2" style="padding-left:70px;">
            <section>
                <h4>Fundaci&oacute;n Un Nuevo Comienzo</h4>
                <div>
                    <p>
                        Bienvenido al Sistema de Administraci&oacute;n, registre sus credenciales para crear su cuenta.
                    </p>
                </div>
            </section>
        </div>
    </div>
</div>
<div>
    <br />
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
