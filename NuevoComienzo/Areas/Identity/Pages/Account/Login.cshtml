@page
@model LoginModel

@{
    ViewData["Title"] = "Inicio de Sesi\u00f3n";
}
    <div class="container" style="padding-top:10%;">
        <h5>@ViewData["Title"]</h5>
        <div class="row">
            <div class="col-md-4">
                <section>
                    <form id="account" method="post">
                        <hr />
                        <div asp-validation-summary="All" class="text-danger"></div>
                        <div class="form-group">
                            <label asp-for="Input.Email">Correo Electr&oacute;nico</label>
                            <input asp-for="Input.Email" class="form-control" />
                            <span asp-validation-for="Input.Email" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Input.Password">Contrase&ntilde;a</label>
                            <input asp-for="Input.Password" class="form-control" />
                            <span asp-validation-for="Input.Password" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <div class="checkbox">
                                <label asp-for="Input.RememberMe">
                                    <input asp-for="Input.RememberMe" />
                                    ¿Recordarme?
                                </label>
                            </div>
                        </div>
                        <div class="form-group">
                            <button type="submit" class="btn btn-primary">Iniciar Sesi&oacute;n</button>
                        </div>
                        <div class="form-group">
                            <p>
                                <a id="forgot-password" asp-page="./ForgotPassword">¿Olvid&oacute; su contrase&ntilde;a?</a>
                            </p>
                        </div>
                    </form>
                </section>
            </div>
            <div class="col-md-6 col-md-offset-2">
                <section>
                    <h4>Fundaci&oacute;n Un Nuevo Comienzo</h4>
                    <hr />
                    <div>
                        <p>
                            Bienvenido al Sistema de Administraci&oacute;n, ingrese sus credenciales.
                        </p>
                    </div>
                </section>
            </div>
        </div>
    </div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
